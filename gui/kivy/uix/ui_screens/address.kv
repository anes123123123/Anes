AddressScreen:
	id: addr_screen
    name: 'address'

	message: ''
    address: ''
    amount: ''
    status: ''

    BoxLayout
        padding: '12dp', '12dp', '12dp', '12dp'
        spacing: '12dp'
        orientation: 'vertical'
        size_hint: 1, 1.1

		BoxLayout:
			spacing: '6dp'
			size_hint: 1, None
			orientation: 'horizontal'
			AddressButton:
				canvas.before:
					Color:
						rgba: 0.9, .498, 0.745, 1
					BorderImage:
						source: 'atlas://gui/kivy/theming/light/card_bottom'
						size: self.size
						pos: self.pos
				id: white
				opacity: 1
				height: '50dp'
				text: _('White')
			AddressButton:
				canvas.before:
					Color:
						rgba: 0.9, .498, 0.745, 1
					BorderImage:
						source: 'atlas://gui/kivy/theming/light/card_bottom'
						size: self.size
						pos: self.pos
				id: change
				opacity: 1
				height: '50dp'
				text: _('Change')
			AddressButton:
				canvas.before:
					Color:
						rgba: 0.9, .498, 0.745, 1
					BorderImage:
						source: 'atlas://gui/kivy/theming/light/card_bottom'
						size: self.size
						pos: self.pos
				id: used
				height: '50dp'
				text: _('Used')
			AddressButton:
				canvas.before:
					Color:
						rgba: 0.9, .498, 0.745, 1
					BorderImage:
						source: 'atlas://gui/kivy/theming/light/card_bottom'
						size: self.size
						pos: self.pos
				id: paid
				height: '50dp'
				text: _('Paid')
			AddressButton:
				canvas.before:
					Color:
						rgba: 0.9, .498, 0.745, 1
					BorderImage:
						source: 'atlas://gui/kivy/theming/light/card_bottom'
						size: self.size
						pos: self.pos
				id: pending
				height: '50dp'
				text: _('Pending')
		
